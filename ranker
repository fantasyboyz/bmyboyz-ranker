<body>
  <h1>B:MY BOYZ RANKER</h1>
  <p>Make your final Top 8</p>

  <div class="ranker">
    <div class="top8" id="top8">
      <!-- Top 8 numbered slots -->
    </div>

    <h3>All Participants</h3>
    <div class="all-members" id="allMembers">
      <!-- Cards auto-filled -->
    </div>
  </div>

  <script>
    const members = [
      "Kang Junseong", "Kim Bohyeon", "Kim Jeonghoon", "Ban Daniel", "Choi Yohan", "Hwang Heewoo",
      "Jang Huigwang", "Jang Won", "Lee Junmyeong", "Lee Seongin", "Lee Yeontae", "Lee Yunsung",
      "Lim Jihwan", "Park Junhyeok", "Park Sechan", "Seo Junhyeok", "Ai", "Haruto", "Hiroto",
      "Hyo", "Ikuto", "Kai", "William", "Didi", "Li Zhiwei", "Moon Jaeil",
      "Suthaschai", "Yang Chengxi", "Yang Hyeonbin"
    ];

    const allMembers = document.getElementById("allMembers");
    const top8 = document.getElementById("top8");

    // Crear espacios vacíos con número
    for (let i = 1; i <= 8; i++) {
      const slot = document.createElement("div");
      slot.className = "top-slot";
      slot.id = `slot-${i}`;
      slot.addEventListener("dragover", (e) => e.preventDefault());
      slot.addEventListener("drop", (e) => {
        e.preventDefault();
        if (slot.children.length > 1) return;
        const draggedId = e.dataTransfer.getData("text/id");
        const draggedCard = document.getElementById(draggedId);
        if (!draggedCard) return;
        slot.appendChild(draggedCard);
      });
      const number = document.createElement("div");
      number.className = "top-slot-number";
      number.textContent = i;
      slot.appendChild(number);
      top8.appendChild(slot);
    }

    members.forEach((name, index) => {
      const id = `member-${index}`;
      const card = document.createElement("div");
      card.className = "card";
      card.id = id;
      card.draggable = true;
      card.innerHTML = `
        <img src="https://api.dicebear.com/8.x/thumbs/svg?seed=${encodeURIComponent(name)}" alt="${name}" />
        <span>${name}</span>
      `;

      card.addEventListener("dragstart", (e) => {
        e.dataTransfer.setData("text/id", id);
        e.dataTransfer.effectAllowed = "move";
      });

      allMembers.appendChild(card);
    });
  </script>
</body>
