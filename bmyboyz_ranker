<body>
  <h1>B:MY BOYZ RANKER</h1>
  <p>Make your final Top 8</p>

  <div class="ranker">
    <div class="top8" id="top8">
      <!-- Top 8 will be dropped here -->
    </div>

    <h3>All Participants</h3>
    <div class="all-members" id="allMembers">
      <!-- Cards auto-filled -->
    </div>
  </div>

  <script>
    const members = [
      "Kang Junseong", "Kim Bohyeon", "Kim Jeonghoon", "Ban Daniel", "Choi Yohan", "Hwang Heewoo",
      "Jang Huigwang", "Jang Won", "Lee Junmyeong", "Lee Seongin", "Lee Yeontae", "Lee Yunsung",
      "Lim Jihwan", "Park Junhyeok", "Park Sechan", "Seo Junhyeok", "Ai", "Haruto", "Hiroto",
      "Hyo", "Ikuto", "Kai", "William", "Didi", "Li Zhiwei", "Moon Jaeil",
      "Suthaschai", "Yang Chengxi", "Yang Hyeonbin"
    ];

    const allMembers = document.getElementById("allMembers");
    const top8 = document.getElementById("top8");

    members.forEach((name) => {
      const card = document.createElement("div");
      card.className = "card";
      card.draggable = true;
      card.innerHTML = `
        <img src="https://via.placeholder.com/80?text=${name.split(" ")[0]}" alt="${name}" />
        <span>${name}</span>
      `;

      card.addEventListener("dragstart", (e) => {
        e.dataTransfer.setData("text/plain", card.outerHTML);
        e.dataTransfer.effectAllowed = "move";
      });

      allMembers.appendChild(card);
    });

    top8.addEventListener("dragover", (e) => {
      e.preventDefault();
    });

    top8.addEventListener("drop", (e) => {
      e.preventDefault();
      if (top8.children.length >= 8) return alert("Only 8 members in the Top 8!");
      const data = e.dataTransfer.getData("text/plain");
      const temp = document.createElement("div");
      temp.innerHTML = data;
      const newCard = temp.firstChild;
      newCard.draggable = false;
      top8.appendChild(newCard);
    });
  </script>
</body>
